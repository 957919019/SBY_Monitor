<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0.2dp">
        <rotate
            android:fromDegrees="315"
            android:pivotX="30%"
            android:pivotY="60%"
            android:toDegrees="90">
            <shape android:shape="line">

                <size
                    android:width="3dp"
                    android:height="3dp"/>
                <stroke
                    android:width="2dp"
                    android:color="@color/deep_sky_blue"/>
                <solid android:color="@color/deep_sky_blue"/>
            </shape>
        </rotate>
    </item>

    <item android:top="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1.3dp"
                android:color="@color/deep_sky_blue"/>
            <solid android:color="@color/deep_sky_blue"/>
        </shape>
    </item>


</layer-list>