<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal" >

    <com.sby.widget.CircleImageView
        android:id="@+id/activity_main_civ_head"
        android:layout_width="120dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="120dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:src="@mipmap/nic_my_photo"/>

    <TextView
        android:id="@+id/activity_main_tv_account"
        style="@style/toolbar_gravity_title"
        android:layout_below="@id/activity_main_civ_head"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding10"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/username"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize18"/>

</RelativeLayout>