<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.sby.practice.ui.aty.favorite.FavoSearchResultActivity">

        <TextView
            android:id="@+id/item_favo_search_result_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="aaa"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize18"/>

        <TextView
            android:id="@+id/item_favo_search_result_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_favo_search_result_tv_title"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="具体地址"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/item_favo_search_result_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_favo_search_result_tv_title"
            android:layout_alignParentEnd="true"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="9.6km"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>